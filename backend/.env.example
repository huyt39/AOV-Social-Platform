# Backend Configuration
PROJECT_NAME="ArenaHub - Liên Quân Social"
SECRET_KEY=changethis

# Admin User
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=changethis

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=arenahub

# SMTP Email Configuration
SMTP_TLS=True
SMTP_SSL=False
SMTP_PORT=587
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=info@example.com

# Frontend URL
FRONTEND_HOST=http://localhost:3000

# Environment
ENVIRONMENT=local

# Backend CORS
BACKEND_CORS_ORIGINS=http://localhost,http://localhost:3000,http://localhost:3001

# Sentry (Optional)
SENTRY_DSN=

# Gemini API (Required for profile verification via LangChain)
# Lấy API key tại: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ImgBB API (Required for image upload)
# Lấy API key tại: https://api.imgbb.com/
IMGBB_API_KEY=your_imgbb_api_key_here

# ClawCloud S3 Configuration (for video upload)
S3_ACCESS_KEY=changethis
S3_SECRET_KEY=changethis
S3_REGION=ap-southeast-1
S3_FORCE_PATH_STYLE=true
S3_USE_SSL=true
S3_INTERNAL_ENDPOINT=http://object-storage.objectstorage-system.svc.cluster.local
S3_EXTERNAL_ENDPOINT=https://objectstorageapi.ap-southeast-1.clawcloudrun.com
S3_RAW_BUCKET=your-raw-videos-bucket
S3_PROCESSED_BUCKET=your-processed-videos-bucket

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# CDN Configuration (initially same as S3 external)
CDN_BASE_URL=https://objectstorageapi.ap-southeast-1.clawcloudrun.com

# Legacy AWS S3 (unused)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=ap-southeast-1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=pretty
